@model WebSiteBanHang.Models.KhachHang

@{
    ViewBag.Title = "Cập nhật khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/Layout-admin.cshtml";
}

<div class="row" style="margin-left:200px; margin-right:200px">
    <div class="col-md-12">
        <h2 style="color: #438EB9">Cập Nhật Khách Hàng</h2>
    </div>
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input type="hidden" name="IDKhachHang" value="@Model.IDKhachHang" />

                <div class="form-group">
                    <label class="control-label col-md-2">Tên khách hàng</label>
                    <div class="col-md-10">
                        <input type="text" name="TenKhachHang" class="form-control" value="@Model.TenKhachhang" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Địa Chỉ</label>
                    <div class="col-md-10">
                        <input type="text" name="DiaChi" class="form-control" value="@Model.DiaChi" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Số Điện Thoại</label>
                    <div class="col-md-10">
                        <input type="text" name="SoDienThoai" class="form-control" value="@Model.SoDienThoai" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Mã Giảm Giá</label>
                    <div class="col-md-10">
                        <input type="text" name="MaGiamGia" class="form-control" value="@Model.MaGiamGia" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Gmail</label>
                    <div class="col-md-10">
                        <input type="text" name="Gmail" class="form-control" value="@Model.Gmail" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Update" class="btn btn-info" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-12">
        <div style="width: 180px; height: 30px; background-color: #6FB3E0; text-align: center; padding-top: 3px">
            <a href="/Admin/Khachhang/DanhSach" style="text-decoration:none; color:white; font-size:15px"> Quay Lại Trang Danh Sách</a>
        </div>
    </div>
</div>

