@model WebSiteBanHang.Models.SanPham
@{ 
    var nhaCungCap = new WebSiteBanHang.Models.mapNhaCungCap().DanhSach();
}



<!-- The Modal -->
<div class="modal" id="formThemMoiSanPham">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h3 class="modal-title" style="color:#438EB9; float:left">Thêm Mới Sản Phẩm</h3>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-2">Tên Sản Phẩm</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenSanPham, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenSanPham, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Giá Bán</label>
                            <div class="col-md-10">
                                <input name="GiaBan" class="form-control" type="number" />
                                @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Ngày Nhập</label>
                            <div class="col-md-10">
                                <input type="date" class="form-control" name="NgayNhap" />
                                @Html.ValidationMessageFor(model => model.NgayNhap, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Còn Hàng</label>
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.ConHang)
                                    @Html.ValidationMessageFor(model => model.ConHang, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Số Lượng</label>
                            <div class="col-md-10">
                                <input name="SoLuong" class="form-control" type="number" />
                                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Bài Viết</label>
                            <div class="col-md-10">
                                <textarea class="form-control" name="BaiViet" id="BaiViet">@Model.BaiViet</textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" for="sel1">Nhà Cung Cấp</label>
                            <div class="col-md-10">
                                <select name="IDNhaCungCap" class="form-control" id="sel1">
                                    @foreach (var item in nhaCungCap)
                                    {
                                        <option value="@item.IDNhaCungCap">@item.TenNhaCungCap</option>
                                    }
                                </select>
                            </div>

                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-info" />
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<script>
    CKEDITOR.replace("BaiViet")
</script>
