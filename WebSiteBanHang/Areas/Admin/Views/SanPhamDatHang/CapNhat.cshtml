@model WebSiteBanHang.Models.SanPhamDatHang

@{
    ViewBag.Title = "Cập nhật sản phẩm đặt hàng";
    Layout = "~/Areas/Admin/Views/Shared/Layout-admin.cshtml";
}

<div class="row" style="margin-left:200px; margin-right:200px">
    <div class="col-md-12">
        <h2 style="color: #438EB9">Cập Nhật Sản Phẩm Đặt Hàng</h2>
    </div>
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IDSanPhamDatHang)

                <div class="form-group">
                    <label class="control-label col-md-2">Đơn Hàng</label>
                    <div class="col-md-10">
                        <select class="form-control" name="IDDonHang">
                            @foreach (var item in new WebSiteBanHang.Models.mapDonHang().DanhSach())
                            {
                                <option value="@item.IDDonHang" @Html.Raw(item.IDDonHang == Model.IDDonHang?"selected":"")>@item.TenDonHang</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Sản Phẩm</label>
                    <div class="col-md-10">
                        <select class="form-control" name="IDSanPham">
                            @foreach (var item in new WebSiteBanHang.Models.mapSanPham().Danhsach())
                            {
                                <option value="@item.IDSanPham" @Html.Raw(item.IDSanPham == Model.IDSanPham?"selected":"")>@item.TenSanPham</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Số Lượng</label>
                    <div class="col-md-10">
                        <input type="number" class="form-control" name="SoLuong" value="@Model.SoLuong" />
                        @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Update" class="btn btn-info" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-12">
        <div style="width: 180px; height: 30px; background-color: #6FB3E0; text-align: center; padding-top: 3px">
            <a href="/Admin/LoaiSanPham/DanhSach" style="text-decoration:none; color:white; font-size:15px"> Quay Lại Trang Danh Sách</a>
        </div>
    </div>
</div>






